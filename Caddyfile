:3000 {
    # Admin API 反代 Node
    handle_path /admin/api/* {
        reverse_proxy 127.0.0.1:4000
    }

    # Admin 前端页面
    handle_path /admin* {
        root * /admin/public
        file_server
    }

    # 首页重定向到 /admin
    handle_path / {
        redir /admin
    }

    handle_errors {
        respond "Not Found" 404
    }
}
