:3000 {
    # 静态首页或重定向到 /admin
    handle_path / {
        root * /admin/public
        file_server
    }

    # Admin 页面
    handle_path /admin* {
        root * /admin/public
        file_server
    }

    # Node API
    handle_path /admin/api/* {
        reverse_proxy 127.0.0.1:4000
    }

    handle_errors {
        respond "Not Found" 404
    }
}
